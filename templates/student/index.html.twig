{% extends 'base.html.twig' %}

{% block body %}
<h2>Etudiants</h2>

{% include 'student/search.html.twig' %}

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Job</th>
      <th>Age</th>
      <th>Equipe</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for student in students %}
      <tr>
        <td>
          <a href="{{ url('student_show', { 'id':student.id }) }}">{{ student.name|upper }}</a>
        </td>
        <td>{{ student.job }}</td>
        <td>{{ student.age }}</td>
        <td>
          {% if student.team %}
            {{ student.team.name }}
          {% endif %}
        </td>
        <td>
          <a 
            class="btn btn-sm btn-outline-primary" 
            href="{{ url('student_edit', { 'id':student.id }) }}">Modifier</a>
          <a 
            class="ml-2 btn btn-sm btn-outline-danger" 
            href="{{ url('student_delete', { 'id':student.id }) }}">Supprimer</a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}